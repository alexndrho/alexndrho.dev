---
import BaseLayout from "@/layouts/BaseLayout.astro";

export interface Props {
  title: string;
  description: string;

  navBarFloat?: boolean | undefined;
}

const { title, description, navBarFloat } = Astro.props;
---

<BaseLayout title={title} description={description} navBarFloat={navBarFloat}>
  <Fragment slot="head">
    <slot name="head" />
  </Fragment>

  <slot />
</BaseLayout>
